package atom_core;

import lejos.hardware.sensor.EV3GyroSensor;
import lejos.robotics.SampleProvider;

public class GyroscopeUtils
extends Setup
{
	//Lettura della distanza del sensore ultrasuoni
	public static float getValue(EV3GyroSensor sensor)
	{
	  SampleProvider readingG = sensor.getAngleMode();
	  float[] rawValuesG = new float[readingG.sampleSize()];
	  
	  /*I valori sotto forma di SampleProvider sono convertiti in un arrray di float con un numero di elementi pari alla
	   *quantità di valori rilevati con una lettura*/
	  readingG.fetchSample(rawValuesG, 0);
	    
	  return rawValuesG[0];
	}
}